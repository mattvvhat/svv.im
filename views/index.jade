doctype html
html(lang="en")
  head
    title svv.im
    link(href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css", rel="stylesheet")
  body
    header
      a(href="#")
        i.fa.fa-sign-in
      br
      a(href="#")
        i.fa.fa-sign-out
      br
    div
      if user
        = 'Logged in as ' + user
        | <br>
        | <a href="/account">Account</a>
        | <a href="/logout">Logout</a>
      else
        a(href="/auth") Login
